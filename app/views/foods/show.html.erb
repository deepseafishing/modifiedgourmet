<div class="container">
  <% if !flash[:alert].nil? %>
  <div class="alert alert-danger">
   <%= flash[:alert] %>
   </div>
   <% end %>

   <h2 class="text-center"> Restaurants Brief </h2>
   <div class="row">
      <div class="col-md-1">
      </div>
      <div class="col-md-5 text-right">
      <img class="img-rounded" src="<%= @post.image_url(:medium) %>">
      </div>
      <div class="col-md-5">
        <h3>+ <%= @post.title %></h3>
        <p><span class="label label-warning"><%= @post.category %></span></p>
        <p><%= @post.content %></p>
        <p><a href="/foods/edit/<%= @post.id %>">Edit</a> | <a href="/foods/delte_complete/<%= @post.id %>">Delete</a> || <a href="/"> See all posts</a></p>
        <hr/>
        <% @post.comments.each do |comment| %>
         <p><strong><%= comment.user.username %></strong><%= comment.content %> | <a href="/foods/delete_comment_complete/<%= comment.id %>"> Delete </a></p>
        <% end %>
    <form class="text-left" action="/foods/write_comment_complete" method="post">
    <input type="hidden" name="post_id" value="<%= @post.id %>"> 
    <% if !@comment_writer.nil? %>
    <p><strong> <%= @comment_writer.username %></strong> <input type="text" name="comment_content" placeholder="Please fill out your comment"> <input type="submit" value="add"></p>
    <% end %>
    </form>
    </div>
    <div class="col-md-1">
    </div>
    </div>
    </div>


